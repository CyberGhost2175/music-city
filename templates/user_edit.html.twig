{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/editprofile.css') }}">
{% endblock %}
{% block body %}
    <section>
    <div class="form-box">
    <div class="form-value">
    {{ form_start(form)}}
        <h2>Edit Profile</h2>
        <div class="inputbox">

            <ion-icon name="people-outline"></ion-icon>
            {{ form_widget(form.username) }}
            {{ form_label(form.username) }}
        </div>
        <div class="inputbox">

            <ion-icon name="mail-outline"></ion-icon>
            {{ form_widget(form.email) }}
            {{ form_label(form.email) }}
        </div>
        <div class="inputbox">
            <ion-icon name="mail-outline"></ion-icon>

            {{ form_row(form.plainPassword)}}
            {{ form_label(form.plainPassword) }}
        </div>
<div class="upload-image">
    <label class="btn btn-primary" for="upload-image">Upload Image</label>
    <input type="file" class="upload-image" id="upload-image" style="display: none;">
</div>

    {{ form_row(form.edit)}}
    {{ form_end(form)}}
    </div>
    </div>
    </section>
{% endblock %}